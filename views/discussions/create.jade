div(data-role='page') 
  div(data-role='header', data-nobackbtn="true", data-theme="b", data-position="fixed")
    h1
      =title
    a(data-icon='arrow-l', class='ui-btn-left', href='/', data-transition='slideup')
      New Cancel
  div(data-role='content')
    form(method='post', action='/discussions/create')
      div
        =user.n
      div
        label Title:
      div
        input(name='title')
      div
        label Message:
      div
        textarea(name='message')
      div(data-role="fieldcontain")
        fieldset(data-role="controlgroup")
          input(type="checkbox", name="public", id="public", class="custom", checked="checked")
          label(for="public")
            \Public
      div
        input(type='submit', value='Add a message', data-theme="a")